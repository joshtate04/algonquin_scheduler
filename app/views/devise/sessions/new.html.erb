<div class="outer">
  <div class="middle">
    <div class="inner">
        <div class="container">
          <div class="row">
            <div class="col-md-4 col-sm-7 col-xs-10 col-centered">
              <%= form_tag :remote_sign_in, remote: true do |f| %>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title text-center">Algonquin Scheduler</h3>
                </div>
                <div class="panel-body">
                  <div class="form-group">
                    <%= email_field_tag :username, "", autofocus: true, placeholder: "Algonquin Username", class: "form-control" %>
                  </div>
                  <div class="form-group" style="margin-bottom: 0;">
                    <%= password_field_tag :password, "", autocomplete: "off", class: "form-control", placeholder: "Password" %>
                    <span class="text-danger" id="error_text"></span>
                  </div>
                </div>
                <div class="panel-footer">
                  <%= submit_tag "Sign In", class: 'btn btn-primary btn-block', data: {disable_with: "Signing in..."}, onclick: "$('#error_text').html('');" %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>